{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:web": "next dev",
    "dev:api": "dotnet watch run --project ../api/Webshop.Api",
    "dev:stripe": "stripe listen --events checkout.session.completed --forward-to http://localhost:5195/api/webhooks/stripe",
    "dev": "npm-run-all -p dev:api dev:web",            
    "start:all": "concurrently -n API,WEB,STRIPE -c auto \"npm:dev:api\" \"npm:dev:web\" \"npm:dev:stripe\"",
    "build": "next build",
    "export": "next export",
    "start": "next start",
    "lint": "next lint",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "next": "15.4.5",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
